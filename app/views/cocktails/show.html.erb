<h3> Cocktail Name: </h3>
<p><%= @cocktail.name %> </p>

<h3>Incredients:</h3>
<ul>
  <%@cocktail.doses.each do |dose|%>
    <li><%=dose.description%> <%=dose.ingredient.name%>
      <%=link_to dose_path(dose), :method => :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
  <%end%>
</ul>

<%=link_to "Add new ingredient", new_cocktail_dose_path(@cocktail),:class => "btn btn-primary"%>
<%=link_to "Delete Cocktail", cocktail_path(@cocktail), :method => :delete ,:class => "btn btn-warning"%>
